{
  "name": "eventflow-app",
  "version": "0.0.1",
  "description": "Event Flow API",
  "license": "MIT",
  "author": "Drummonds",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "tsx --watch ./src/core/server.ts",
    "start": "node ./dist/server.js",
    "docker:up": "docker compose -f compose.yaml -f compose.dev.yaml up -d",
    "docker:down": "docker compose down",
    "logs:api": "docker compose logs -f api",
    "logs:db": "docker compose logs -f db",
    "migrate:up": "docker compose exec api npx node-pg-migrate up -m src/database/migrations",
    "migrate:down": "docker compose exec api npx node-pg-migrate down -m src/database/migrations",
    "migrate:create": "node-pg-migrate create -m src/database/migrations",
    "test": "docker compose exec api npx vitest"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "dotenv": "^17.2.3",
    "node-pg-migrate": "^8.0.4",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
