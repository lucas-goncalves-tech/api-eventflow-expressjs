{
  "name": "eventflow-app",
  "version": "0.0.1",
  "description": "Event Flow API",
  "license": "MIT",
  "author": "Drummonds",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "tsx --watch ./src/core/server.ts",
    "migrate:up": "tsx node_modules/.bin/node-pg-migrate up -m src/database/migrations",
    "migrate:down": "tsx node_modules/.bin/node-pg-migrate down -m src/database/migrations",
    "migrate:create": "node-pg-migrate create -j ts -m src/database/migrations",
    "test": "vitest"
  },
  "dependencies": {
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "node-pg-migrate": "^8.0.4",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
